<?xml version="1.0" encoding="utf-8"?>

<image schemaversion="6.8" name="MythTV">
	<description type="system">
		<author>Paul Gardiner</author>
		<contact>mythtv@glidos.net</contact>
		<specification>
			MythTV frontend
		</specification>
	</description>
	<profiles>
		<profile name="KIS" description="Separate kernel initfs and system" import="true"/>
		<profile name="Live" description="Live image" import="true"/>
		<profile name="Virtual" description="Simple Disk image"/>
		<profile name="Disk" description="Expandable Disk image"/>
	</profiles>
	<preferences>
		<version>1.0.0</version>
		<packagemanager>zypper</packagemanager>
		<locale>en_GB</locale>
		<keytable>uk</keytable>
		<timezone>Europe/London</timezone>
		<rpm-excludedocs>true</rpm-excludedocs>
		<rpm-check-signatures>false</rpm-check-signatures>
		<bootsplash-theme>bgrt</bootsplash-theme>
		<bootloader-theme>openSUSE</bootloader-theme>
	</preferences>
	<preferences profiles="KIS">
		<type image="kis" filesystem="ext3"/>
	</preferences>
	<preferences profiles="Live">
		<type image="iso" primary="true" flags="overlay" hybrid="true" firmware="efi" kernelcmdline="splash" hybridpersistent="false" mediacheck="true"/>
	</preferences>
	<preferences profiles="Virtual">
		<type image="vmx" filesystem="ext4" bootloader="grub2" kernelcmdline="splash" firmware="efi">
			<machine memory="512" guestOS="suse" HWversion="4">
				<vmdisk id="0" controller="ide"/>
				<vmnic driver="e1000" interface="0" mode="bridged"/>
			</machine>
		</type>
	</preferences>
	<preferences profiles="Disk">
		<type image="oem" filesystem="ext4" initrd_system="dracut" installiso="true" bootloader="grub2" kernelcmdline="splash" firmware="efi">
			<oemconfig>
				<oem-systemsize>2048</oem-systemsize>
				<oem-swap>true</oem-swap>
				<oem-device-filter>/dev/ram</oem-device-filter>
				<oem-multipath-scan>false</oem-multipath-scan>
			</oemconfig>
		</type>
	</preferences>
	<users>
		<user password="XXXXXXXXXXXXX" home="/root" name="root" groups="root"/>
		<user password="YYYYYYYYYYYYY" home="/home/mythfrontend" name="mythfrontend" groups="users,audio,video" id="500"/>
	</users>
	<repository type="rpm-md" alias="kiwi" priority="1">
		<source path="obs://Virtualization:Appliances:Builder/openSUSE_Leap_15.4"/>
	</repository>
	<repository type="yast2" alias="Leap_15.4Update" priority="2">
		<source path="obs://openSUSE:Leap:15.4:Update/standard"/>
	</repository>
	<repository type="yast2" alias="Leap_15.4" priority="3">
		<source path="obs://openSUSE:Leap:15.4/standard"/>
	</repository>
	<repository type="rpm-md" alias="perl" priority="4">
		<source path="obs://devel:languages:perl/15.4"/>
	</repository>
	<repository type="rpm-dir" alias="Local_RPMs" priority="5">
		<source path="dir:///home/public/tmp/myrepo_15.4"/>
	</repository>
	<packages type="image">
		<package name="checkmedia"/>
		<package name="cryptsetup"/>
		<package name="patterns-openSUSE-base"/>
		<package name="plymouth-theme-bgrt"/>
		<package name="plymouth-dracut"/>
		<package name="grub2-branding-openSUSE"/>
		<package name="ifplugd"/>
		<package name="iputils"/>
		<package name="vim"/>
		<package name="grub2"/>
		<package name="grub2-x86_64-efi" arch="x86_64"/>
		<package name="grub2-i386-pc"/>
		<package name="syslinux"/>
		<package name="lvm2"/>
		<package name="plymouth"/>
		<package name="fontconfig"/>
		<package name="fonts-config"/>
		<package name="tar"/>
		<package name="parted"/>
		<package name="openssh"/>
		<package name="iproute2"/>
		<package name="less"/>
		<package name="bash-completion"/>
		<package name="dhcp-client"/>
		<package name="which"/>
		<package name="shim"/>
		<package name="kernel-default"/>
		<package name="kernel-default-extra"/>
		<package name="kernel-firmware"/>
		<package name="ntp"/>
		<package name="nfs-client"/>
		<package name="ucode-intel"/>
		<package name="intel-vaapi-driver"/>
		<package name="xorg-x11-server"/>
		<package name="xf86-input-evdev"/>
		<package name="twm"/>
		<package name="xinit"/>
		<package name="alsa"/>
		<package name="alsa-plugins"/>
		<package name="alsa-utils"/>
		<package name="v4l-utils"/>
		<package name="mythtv-frontend"/>
		<package name="mythplugins-mythmusic"/>
		<package name="timezone"/>
	</packages>
	<packages type="kis">
		<package name="gfxboot-branding-openSUSE"/>
		<package name="dracut-kiwi-overlay"/>
	</packages>
	<packages type="iso">
		<package name="gfxboot-branding-openSUSE"/>
		<package name="dracut-kiwi-live"/>
	</packages>
	<packages type="oem">
		<package name="gfxboot-branding-openSUSE"/>
		<package name="dracut-kiwi-oem-repart"/>
		<package name="dracut-kiwi-oem-dump"/>
	</packages>
	<packages type="bootstrap">
		<package name="udev"/>
		<package name="filesystem"/>
		<package name="glibc-locale"/>
		<package name="cracklib-dict-full"/>
		<package name="ca-certificates"/>
		<package name="openSUSE-release"/>
	</packages>
</image>
